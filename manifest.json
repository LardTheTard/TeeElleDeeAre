{
  "name": "TeeElleDeeAre",
  "description": "Too Long; Didn't Read - AI-powered link summarizer extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/memo-emoji-16.png",
      "48": "icons/memo-emoji-48.png",
      "128": "icons/memo-emoji-128.png"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "oauth2": {
    "client_id": "426694438806-jh80trnheqmaljbabipgsclr3se20u20.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/documents",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": [
            "scripts/readingTime.js",
            "scripts/tooltip.js"
          ],
    "css": ["styles/tooltip.css"],
    "run_at": "document_idle"
  }
  ]
}

